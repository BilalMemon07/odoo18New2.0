<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_return_form" model="ir.ui.view">
            <field name="name">sale.return.form</field>
            <field name="model">sale.return</field>
            <field name="arch" type="xml">
                <form string="Sale Return">
                    <header>
                        <button name="action_confirm" invisible="state != 'draft'" string="Confirm" type="object"
                                class="oe_highlight"
                                groups="wedo_sale_return.group_sale_return_user"/>4
                        <button name="reconcile_return_move_line"
                                invisible="state not in ('draft', 'confirm', 'cancel', 'done')" string="Reconcile"
                                type="object" class="oe_highlight"/>
                        <button name="action_reset_draft" invisible="state not in ('confirm', 'cancel')"
                                string="Reset Draft" type="object"
                                class="oe_highlight"
                                groups="wedo_sale_return.group_sale_return_user"/>
                        <button name="action_process" string="Process" type="object" invisible="state != 'confirm'"
                                class="oe_highlight"
                                groups="wedo_sale_return.group_sale_return_manager"/>
                        <button name="action_cancel" type="object" invisible="state not in ('done', 'draft')"
                                string="Cancel"
                                class="oe_highlight"
                                groups="wedo_sale_return.group_sale_return_manager"/>
                        <field name="state" widget="statusbar" readonly="1"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_open_picking_invoice" type="object"
                                    class="oe_stat_button" icon="fa-file-text"
                                    invisible="invoice_count == 0">
                                <field name="invoice_count" widget="statinfo" string="Invoices"/>
                            </button>
                            <button name="action_open_picking" type="object"
                                    class="oe_stat_button" icon="fa-truck"
                                    invisible="picking_count == 0"
                            >
                                <field name="picking_count" widget="statinfo"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <span class="o_form_label">Order Name</span>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="is_sale_return_manager" readonly="1" force_save="1" invisible="1"/>
                                <field name="move"
                                       readonly="state != 'draft'"/>
                                <field name="partner_id" widget="res_partner_many2one"
                                       context="{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True}"
                                       placeholder="Name, TIN, Email, or Reference"
                                       readonly="state != 'draft'"/>
                                <field name="reference"
                                       readonly="state != 'draft'"/>
                                <label for="pricelist_id" groups="product.group_product_pricelist"/>
                                <div groups="product.group_product_pricelist" class="o_row">
                                    <field name="pricelist_id" force_save="1"
                                           options="{'no_open':True,'no_create': True}"
                                           readonly="state != 'draft' or move_id == False"/>
                                    <button name="update_prices" type="object"
                                            string=" Update Prices"
                                            help="Recompute all prices based on this pricelist"
                                            class="btn-link mb-1 px-0" icon="fa-refresh"
                                            confirm="This will update all unit prices based on the currently set pricelist."
                                            invisible="show_update_pricelist == False and state != 'draft'"/>
                                </div>
                                <field name="picking_type_id" invisible="0" options="{'no_create': True}"
                                       readonly="is_sale_return_manager == False"
                                       force_save="1"
                                       groups="stock.group_stock_multi_locations"/>
                                <field name="sales_person_n" force_save="1"/>
                                <field name="default_location_dest_id_usage" invisible="1"/>
                                <field name="picking_ids" widget="many2many_tags" force_save="1" readonly="1"/>
                            </group>
                            <group>
                                <field name="move_id" domain="[('partner_id','=',partner_id)]"
                                       readonly="state != 'draft'"
                                       invisible="move != True"
                                       required="move == True"/>
                                <field name="date_order" readonly="state != 'draft'"
                                />
                                <field name="reason_id" readonly="state != 'draft'"

                                       options="{'no_create_edit': True,'no_create': True}"/>
                                <field name="currency_id" groups="base.group_multi_currency" force_save="1"
                                       readonly="state != 'draft' or move_id != False"
                                />
                                <field name="return_journal_id"
                                       domain="[('type','=','sale'),('company_id','=',company_id)]"
                                       readonly="state != 'draft'"
                                />

                                <field name="location_id" string="Receive To Location"
                                       domain="[('usage','=','internal'),('location_id', 'child_of',[warehouse_view_location_id])]"
                                       options="{'no_create': True}"
                                       required="1"
                                       readonly="is_sale_return_manager == False"
                                       force_save="1"
                                       groups="stock.group_stock_multi_locations"/>
                                <field name="warehouse_view_location_id" invisible="1"/>
                                <field name="company_id"
                                       readonly="state != 'draft'"

                                       invisible="1"/>
                                <field name="user_id" force_save="1" invisible="1"/>
                                <field name="show_update_pricelist" invisible="1"/>
                                <field name="fiscal_position_id" invisible="1"/>

                            </group>

                        </group>
                        <notebook>
                            <page string="Lines" name="lines">
                                <field name="order_line_ids"
                                       widget="section_and_note_one2many"
                                       mode="list"
                                >
                                    <list string="Lines" editable="bottom">
                                        <control>
                                            <create name="add_product_control" string="Add a product"/>
                                            <create name="add_section_control" string="Add a section"
                                                    context="{'default_display_type': 'line_section'}"/>
                                            <create name="add_note_control" string="Add a note"
                                                    context="{'default_display_type': 'line_note'}"/>
                                        </control>
                                        <field name="move_id" invisible="1"/>
                                        <field name="display_type" invisible="1"/>
                                        <field name="product_id"
                                               readonly="state != 'draft' and state != False"
                                               required="display_type == False"
                                        />
                                        <field name="name" widget="section_and_note_text" optional="hide"/>
                                        <field name="product_qty" readonly="1" force_save="1"/>
                                        <field name="product_uom"
                                               readonly="state != 'draft' and state != False"

                                               optional="hide"/>
                                        <field name="price_unit"
                                               readonly="state != 'draft' and state != False"
                                        />
                                        <field name="discount" string="Disc.%"
                                               groups="sale.group_discount_per_so_line" optional="hide"/>
                                        <field name="qty_return"
                                               readonly="state != 'draft' and state != False"
                                        />
                                        <field name="product_packaging_qty"
                                               invisible="product_id == False or product_packaging_id == False"
                                               groups="product.group_stock_packaging" optional="hide"/>
                                        <field name="product_packaging_id"
                                               invisible="product_id == False"
                                               context="{'default_product_id': product_id, 'list_view_ref':'product.product_packaging_tree_view', 'form_view_ref':'product.product_packaging_form_view'}"
                                               groups="product.group_stock_packaging" optional="hide"/>
                                        <field name="tax_id"
                                               domain="[('company_id','=',company_id),('type_tax_use','=','sale')]"
                                               widget="many2many_tags"
                                               readonly="state != 'draft' and state != False"
                                               optional="hide"/>
                                        <field name="price_subtotal"/>
                                        <field name="received_qty" force_save="1" readonly="1"/>
                                        <field name="invoiced_qty" force_save="1" readonly="1"/>
                                        <field name="state" invisible="1"/>
                                        <field name="price_tax" invisible="1"/>
                                        <field name="company_id" invisible="1"/>
                                        <field name="currency_id" invisible="1"/>
                                        <field name="product_uom_qty" optional="hide"/>
                                        <field name="product_no_variant_attribute_value_ids" invisible="1"
                                               optional="hide"/>

                                    </list>
                                </field>
                                <group name="note_group" col="6" class="mt-2 mt-md-0">
                                    <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                        <field name="amount_untax"/>
                                        <field name="amount_tax"/>
                                        <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                            <label for="total"/>
                                        </div>
                                        <field name="total" nolabel="1" class="oe_subtotal_footer_separator"/>
                                    </group>
                                    <div class="oe_clear"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="sale_return_view_list" model="ir.ui.view">
            <field name="name">sale.return.view.list</field>
            <field name="model">sale.return</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="sales_person_n"/>
                    <field name="move_id"/>
                    <field name="date_order"/>
                    <field name="state"/>
                    <field name="total"/>
                </list>
            </field>
        </record>
        <record id="sale_return_view_pivot" model="ir.ui.view">
            <field name="name">sale.return.view.pivot</field>
            <field name="model">sale.return</field>
            <field name="arch" type="xml">
                <pivot display_quantity="True" sample="1">
                    <field name="partner_id" type="row"/>
                    <field name="total" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="sale_return_view_graph" model="ir.ui.view">
            <field name="name">sale.return.view.graph</field>
            <field name="model">sale.return</field>
            <field name="arch" type="xml">
                <graph string="Sale Return" sample="1">
                    <field name="partner_id" type="row"/>
                    <field name="total" type="measure"/>
                </graph>
            </field>
        </record>
        <record id="sale_return_search" model="ir.ui.view">
            <field name="name">sale.return.filter</field>
            <field name="model">sale.return</field>
            <field name="arch" type="xml">
                <search string="Sale Return Filter">
                    <field name="move"/>
                    <field name="name"/>
                    <field name="picking_ids"/>
                    <field name="move_id"/>
                    <field name="return_journal_id"/>
                    <field name="partner_id"/>
                    <field name="date_order"/>
                    <field name="state"/>
                    <group expand="0" string="Group By">
                        <filter string="Customer" name="groupby_partner" domain="[]"
                                context="{'group_by': 'partner_id'}"/>
                        <filter string="move" name="groupby_move" domain="[]" context="{'group_by': 'move'}"/>
                        <filter string="State" name="groupby_state" domain="[]" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="sale_return_action">
            <field name="name">Sale Return</field>
            <field name="res_model">sale.return</field>
            <field name="view_mode">list,form,pivot,graph</field>
            <field name="view_id" ref="sale_return_view_list"/>
            <field name="search_view_id" ref="sale_return_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a request for return
                </p>
            </field>
        </record>

        <!-- Top menu item -->
        <menuitem name="Sale Return"
                  id="menu_return_sale_root" groups="wedo_sale_return.group_sale_return_user"
                  web_icon="wedo_sale_return,static/description/icon.png"
                  sequence="4"/>

        <menuitem id="menu_sale_form_action" parent="menu_return_sale_root" action="sale_return_action" sequence="1"
                  groups="wedo_sale_return.group_sale_return_user"/>

        <!--Reason-->

        <record id="sale_return_reason_form" model="ir.ui.view">
            <field name="name">sale.return.reason.form</field>
            <field name="model">sale.return.reason</field>
            <field name="arch" type="xml">
                <form string="Sale Return Reason">

                    <sheet>
                        <div class="oe_title">
                            <span class="o_form_label">Reason</span>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="sale_return_reason_view_list" model="ir.ui.view">
            <field name="name">sale.return.reason.view.list</field>
            <field name="model">sale.return.reason</field>
            <field name="arch" type="xml">
                <list>
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record id="sale_return_reason_search" model="ir.ui.view">
            <field name="name">sale.return.reason.filter</field>
            <field name="model">sale.return.reason</field>
            <field name="arch" type="xml">
                <search string="Sale Return Reason">
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="sale_return_reason_action">
            <field name="name">Sale Return Reason</field>
            <field name="res_model">sale.return.reason</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="sale_return_reason_view_list"/>
            <field name="search_view_id" ref="sale_return_reason_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a return Reason
                </p>
            </field>
        </record>

        <menuitem id="menu_sale_reason_form_action" parent="menu_return_sale_root" action="sale_return_reason_action"
                  sequence="2" groups="wedo_sale_return.group_sale_return_manager"/>

    </data>
</odoo>
